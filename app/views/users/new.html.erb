
<h1>New User</h1>

<%=form_for(@user) do |f| %>
<label> Name </label> <br />
<%= f.text_field :name %><br />
<label> Password</label><br />
<%=f.password_field :password%><br />
<label> Height(in inches) </label> <br />
<%= f.text_field :height %><br />
<label> How happy are you?(1-5 scale) </label> <br />
<%= f.text_field :happiness %><br />
<label> How many tickets are in your pocket? </label> <br />
<%= f.text_field :tickets %><br />
<label> How nauseous are you? </label>
<%= f.text_field :nausea %><br />
<label> Are you the theme park owner? </label> <br />
<%= f.check_box :admin %><br />
<%= f.submit "Create User" %><br />
<% end %>
